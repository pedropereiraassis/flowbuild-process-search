{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ES2023"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "inlineSources": true,
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceRoot": "/",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@jobs/*": [
        "src/jobs/*"
      ],
      "@jobs": [
        "src/jobs"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@tests/*": [
        "tests/*"
      ]
    }
  }
}